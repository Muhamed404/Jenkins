pipeline {
  agent any
  
  stages {
    stage('Docker-Image-Build') {
      steps {
        script {
          sh '''
            docker build -t my-nginx-webapp .
          '''
        }
      }
    }
    stage('Minikube Deployment'){
      steps {
        script {
          sh '''
          kubectl apply -f webapp-deply.yaml
          '''
        }
      }
    }
  }
}
